<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ResultadoActivity">

    <ImageView
            android:layout_width="350dp"
            android:layout_height="350dp" android:contentDescription="TODO" app:srcCompat="@drawable/cara"
            android:id="@+id/imagemResultado" android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textoResultado" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp" android:layout_marginEnd="40dp"
            app:layout_constraintVertical_bias="0.84000003"/>
    <TextView
            android:text="CARA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textoResultado" android:textSize="36sp"
            app:layout_constraintTop_toBottomOf="@+id/imagemResultado" android:layout_marginBottom="150dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:background="?attr/actionModeCloseDrawable" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="28dp" app:layout_constraintTop_toBottomOf="@+id/imagemResultado"
            android:layout_marginBottom="30dp" app:layout_constraintVertical_bias="1.0" android:onClick="voltar"/>
</android.support.constraint.ConstraintLayout>